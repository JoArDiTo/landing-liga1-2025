---
import Facebook from '@icons/Facebook.astro'
import Instagram from '@icons/Instagram.astro'
import Youtube from '@icons/Youtube.astro'
import X from '@icons/X.astro'
import Github from '@icons/Github.astro'
---

<footer class="w-full flex flex-col justify-center items-center bg-slate-950 bg-opacity-75 text-white py-4 bg-footer-found bg-cover bg-center bg-no-repeat relative z-10">
  <img class="w-56 lg:w-96 pt-5 pb-8" src="/logoFooter.png" alt="Logo de la Liga1 en el pie de página">
  <section class="w-full max-w-5xl flex flex-col lg:flex-row justify-around pb-5">
    <section class="text-center pb-5">
      <p class="font-semibold pb-4">REDES SOCIALES</p>
      <div class="flex justify-center gap-7">
        <a href="https://www.facebook.com/Liga1TeApuesto" target="_blank" class="transition hover:scale-125">
          <Facebook class="w-12 h-12 lg:w-16 lg:h-16" />
        </a>
        <a href="https://www.instagram.com/liga1teapuesto" target="_blank" class="transition hover:scale-125">
          <Instagram class="w-12 h-12 lg:w-16 lg:h-16" />
        </a>
        <a href="https://www.youtube.com/@L1MAX_" target="_blank" class="transition hover:scale-125">
          <Youtube class="w-12 h-12 lg:w-16 lg:h-16" />
        </a>
        <a href="https://x.com/Liga1TeApuesto" target="_blank" class="transition hover:scale-125">
          <X class="w-12 h-12 lg:w-16 lg:h-16" />
        </a>
      </div>
    </section>
    <section class="text-center pb-5">
      <p class="font-semibold pb-4">SPONSORS</p>
      <div class="grid grid-cols-2 place-items-center gap-6">
        <a href="https://www.adidas.pe" target="_blank" class="transition hover:scale-125">
          <img class="w-20 lg:w-auto" src="/sponsors/adidas.webp" alt="Logo de Adidas">
        </a>
        <a href="https://www.teapuesto.pe/sport" target="_blank" class="transition hover:scale-125">
          <img class="w-32 lg:w-auto" src="/sponsors/te-apuesto.webp" alt="Logo de Te Apuesto">
        </a>
        <a href="https://www.latamairlines.com/pe/es" target="_blank" class="transition hover:scale-125">
          <img class="w-28 lg:w-auto" src="/sponsors/latam.webp" alt="Logo de Latam Airlines">
        </a>
        <a href="https://www.ajegroup.com/marca/sporade/" target="_blank" class="transition hover:scale-125">
          <img class="w-28 lg:w-auto" src="/sponsors/sporade.webp" alt="Logo de Sporade">
        </a>
      </div>
    </section>
  </section>
  <section class="flex flex-col lg:flex-row items-center text-xs lg:text-lg gap-x-0.5 font-semibold pb-5">
    <p>Liga1 2025 - LIGA DE FÚTBOL PROFESIONAL -</p>
    <p>LANDING PAGE SIN FINES DE LUCRO</p>
  </section>
  <a href="https://github.com/JoArDiTo/landing-liga1-2025" target="_blank" rel="noopener noreferrer" class="transition hover:scale-125 pb-5">
    <Github class="w-16 h-16" />
  </a>
</footer>

<style>

footer::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(15, 23, 42, .85);
  z-index: -1;
}
</style>