---
interface Props {
  slug: string;
  name: string;
  img: string;
  class?: string;
}

const { slug, name, img } = Astro.props
---

<article id=`article-${slug}` class:list={["cursor-pointer bg-gray-300 rounded-md overflow-hidden group", Astro.props.class]}>
  <img id=`image-${slug}` src={img} alt={name} class="w-full h-full object-cover rounded-md ransition-transform duration-300 ease-in-out group-hover:scale-110">
</article>