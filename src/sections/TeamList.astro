---
import TeamCard from '@components/TeamCard.astro'
import { teams } from '@mocks/info.json'
---

<section class="w-full py-4 lg:py-8 flex flex-col items-center justify-center font-primary max-w-lg lg:max-w-6xl">
  <span class="text-xl lg:text-5xl pb-2 lg:pb-8">EQUIPOS PARTICIPANTES</span>
  <div class="flex flex-wrap gap-5 justify-center">
    {
      teams.map((team) => (
        <TeamCard id={team.id} name={team.name} img={team.img} created_at={team.created_at} />
      ))
    }
  </div>
</section>