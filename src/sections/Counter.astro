      startEventContainer.innerHTML = `
        <span class="text-xl lg:text-6xl py-[18px] py-14">COMENZÃ“ LA FIESTA!</span>
      `;
    }
  }

  const countdownInterval = setInterval(updateCountdown, 1000);
  updateCountdown();
</script>